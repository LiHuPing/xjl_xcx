/**index.wxss**/

.swiper {
  width: 100%;
  height: 288rpx;
}

.info {
  padding-left: 15px;
  padding-right: 15px;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin: 20rpx 0;
  background-color: #fff;
  font-size: 24rpx;
  height: 96px;

}

.info>view {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

.info image {
  width: 88rpx;
  height: 88rpx;
  margin-bottom: 10px;
}

.main {
  position: relative;
  padding: 15px 15px 0 15px;
  background-color: #fff;
}

.title {
  font-size: 18px;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: rgba(17, 17, 17, 0.98);
}

.hint {
  width: 64px;
  height: 20px;
  background: rgba(224, 50, 44, 1);
  border-radius: 2px;
  line-height: 20px;
  font-size: 12px;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  text-align: center;
  margin: 10px 0 15px 0;
}

.hint text {
  position: absolute;
  color: rgba(17, 17, 17, 1);
  left: 89px;
  top: 47px;
  width: 190px;
}

input {
  height: 50px;
  background: rgba(249, 249, 249, 1);
  border-radius: 25px;
  padding-left: 15PX;
  font-size: 15px;
  font-family: PingFangSC-Regular;
  color: rgba(153, 153, 153, 1);

}

#idCard {
  margin: 15px 0;
}

.pact {
  display: flex;
  flex-direction: row;
  margin: 15px 0;
  align-items: center;
  justify-content: space-between;
}

.pact>text:nth-of-type(1) {
  font-size: 15px;
  color: rgba(17, 17, 17, 1);
}

.pact>text:nth-of-type(2) {
  font-size: 12px;
  color: rgba(51, 51, 51, 1);
}

.dkj {
  text-align: center;
  font-size: 12px;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
}

.dkj>text {
  color: #E0322C;
  margin-left: 5px;
}

button {
  font-size: 18px;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  height: 50px;
  line-height: 50px;
  border-radius: 25px;
}

.btn-area>button:nth-of-type(1) {
  color: #fff;
  background-color: #E0322C;
}

.btn-area>button:nth-of-type(2) {
  background-color: #fff;
  color: rgba(224, 50, 44, 1);
  border: 1px solid rgba(224, 50, 44, 1);
  margin: 20px 0;
}

.content {
  margin-top: 15px;
  margin-bottom: 20px;
  height: 120px;
  background: rgba(249, 249, 249, 1);
  border-radius: 2px;
}

.content image {
  width: 32px;
  height: 32px;
}

.protocol {
  width: 255px;
  height: 38px;
  font-size: 12px;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 17px;
}